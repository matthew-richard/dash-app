<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreen"
    android:background="#ff14ff4f">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run for Fun"
        android:id="@+id/fun"
        android:onClick="mapTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"
        android:background="#ffff0099" />

    <Button
        android:layout_width="@dimen/dialog_fixed_width_major"
        android:layout_height="wrap_content"
        android:text="DASH FOR CASH"
        android:id="@+id/money"
        android:background="#ff3debff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="98dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@android:dimen/app_icon_size"
        android:elegantTextHeight="false"
        android:clickable="true" />

</RelativeLayout>
